[Unit]
Description=Derby Display Service
After=network.target graphical.target

[Service]
Environment=XDG_RUNTIME_DIR=/run/user/1000
Environment=DISPLAY=:0
ExecStart=/usr/bin/python3 /opt/derbynet/files/derbydisplay/derbydisplay.py
Restart=always
User=displayuser

[Install]
WantedBy=multi-user.target